# -*- mode: conf-unix; -*-

alt + comma
    run-or-raise.sh xterm "xterm -title xterm -e tm"

alt + space
    run-or-raise.sh emacs emacs

alt + shift + p
    run-or-raise.sh madsonic madsonic

alt + shift + w
    run-or-raise.sh waterfox waterfox

alt + shift + e
    run-or-raise.sh pcmanfm pcmanfm

super + shift + a
    j4-dmenu-desktop --dmenu="dmenu -i -l 10"

super + a
    dmenu_run -l 10

ctrl + alt + BackSpace
    dmenu-y-or-n-p.sh "Logout?" && killall xfwm4

ctrl + alt + l
    lock-screen.sh

ctrl + alt + shift + BackSpace
    dmenu-y-or-n-p.sh "Shutdown?" && shutdown now

super + shift + t
    change-theme.sh

super + e
    pcmanfm $HOME

super + shift + {Left, Right}
    move-to-next-monitor.sh

# The '@' is for listening to key release
super + @F12
    screenshot.sh

super + shift + @F12
    screenshot.sh selection clipboard

XF86AudioRaiseVolume
    audiocontrol.sh up

XF86AudioLowerVolume
    audiocontrol.sh down

XF86AudioMute
    audiocontrol.sh mute

ctrl + alt + shift + Down
    audiocontrol.sh down

ctrl + alt + shift + Up
    audiocontrol.sh up

ctrl + alt + shift + m
    audiocontrol.sh mute