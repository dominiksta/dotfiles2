! ----------------------------------------------------------------------
! General
! ----------------------------------------------------------------------

*background: #000000
*foreground: #FFFFFF

! ----------------------------------------------------------------------
! URxvt
! ----------------------------------------------------------------------

! Use symbola as a fallback font for emojis
URxvt.font                   : xft:DejaVu Sans Mono:size=10, xft:Symbola:size=10
! By default, the characters are spaced too wide in urxvt
URxvt.letterSpace            : -1

URxvt.perl-ext-common        : default,resize-font
URxvt.scrollBar              : false
URxvt.internalBorder         : 0
URxvt.geometry               : 150x40
! Disable the thing that comes up when hitting control and meta. Apparently it
! is used by default to input unicode characters.
URxvt.iso14755               : false

! Remap the keys for copy/paste to what I am used to.
URxvt.keysym.Control-Meta-c  : builtin-string:
URxvt.keysym.Control-Meta-v  : builtin-string:
URxvt.keysym.Shift-Control-V : eval:paste_clipboard
URxvt.keysym.Shift-Control-C : eval:selection_to_clipboard

! hide mouse cursor after 3 secons
URxvt.pointerBlank           : true
URxvt.pointerBlankDelay      : 3